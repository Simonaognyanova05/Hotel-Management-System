<section id="title">
    <h1>Президентски апартамент</h1>
</section>

<section id="make-reservation">
    <form action="/presidentApart" method="post">
        <label for="info">Обща информация: </label>
        <input type="text" name="info">
        <label for="capacity">Капацитет: </label>
        <input type="text" name="capacity">
        <label for="roomSize">Размер на стаята: </label>
        <input type="text" name="roomSize">
        <div class="form-group">
            <label>Тераса: </label>
            <div class="radio-group">
                <input type="radio" id="terrace-yes" name="terrace" value="ДА">
                <label for="terrace-yes">Да</label>
                <input type="radio" id="terrace-no" name="terrace" value="НЕ">
                <label for="terrace-no">Не</label>
            </div>
        </div>

        <label for="privateBathroom">Частна баня: </label>
        <input type="text" name="privateBathroom">
        <label for="view">Гледка: </label>
        <input type="text" name="view">
        <label for="pets">Домашни любимци: </label>
        <input type="text" name="pets">
        <label for="discounts">Отстъпки: </label>
        <input type="text" name="discounts">
        <label for="img1">Изображение 1: </label>
        <input type="text" name="img1">
        <label for="img2">Изображение 2: </label>
        <input type="text" name="img2">
        <label for="img3">Изображение 3: </label>
        <input type="text" name="img3">
        <label for="img4">Изображение 4: </label>
        <input type="text" name="img4">
        <label for="img5">Изображение 5: </label>
        <input type="text" name="img5">
        <label for="img6">Изображение 6: </label>
        <input type="text" name="img6">

        <input type="submit" value="Обнови">
    </form>
</section>